<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_margin="16dp"
            android:background="@color/purple_200"
            android:text="Logout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/glass1"
                android:layout_width="127dp"
                android:layout_height="198dp"
                app:srcCompat="@drawable/glass_water" />

            <ImageView
                android:id="@+id/glass2"
                android:layout_width="127dp"
                android:layout_height="198dp"
                app:srcCompat="@drawable/empty_glass" />

            <ImageView
                android:id="@+id/glass3"
                android:layout_width="127dp"
                android:layout_height="198dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/empty_glass" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/glass4"
                android:layout_width="127dp"
                android:layout_height="198dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/glass_water" />

            <ImageView
                android:id="@+id/glass5"
                android:layout_width="127dp"
                android:layout_height="198dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/glass_water" />

            <ImageView
                android:id="@+id/glass6"
                android:layout_width="127dp"
                android:layout_height="198dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/glass_water" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/glass8"
                android:layout_width="127dp"
                android:layout_height="198dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/glass_water" />

            <ImageView
                android:id="@+id/glass7"
                android:layout_width="127dp"
                android:layout_height="198dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/glass_water" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_change"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_margin="16dp"
            android:background="@color/purple_200"
            android:text="refresh" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>